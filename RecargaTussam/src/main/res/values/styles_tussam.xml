<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Tussam" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_tussam</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tussam</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_tussam</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_tussam</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tussam</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Tussam</item>
        <item name="android:spinnerDropDownItemStyle">@style/Spinner.Tussam</item>

        <!-- Lollipop properties -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/color_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_accent</item>


    </style>


    <style name="ActionBar.TitleTextStyle" parent="RtlOverlay.Widget.AppCompat.ActionBar.TitleItem">
        <item name="android:textColor">@color/color_palette_1</item>
    </style>

    <style name="Spinner.Tussam" parent="Widget.AppCompat.Spinner">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/color_palette_1_dark</item>
        <item name="android:textColor">@color/common_text_color</item>
    </style>


    <style name="ActionBarTabStyle.Tussam" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tussam</item>
    </style>


    <style name="ActionButton.CloseMode.Tussam" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tussam</item>
    </style>


    <style name="ProgressBar.Tussam" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/tussam_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">
            @drawable/tussam_progress_indeterminate_horizontal_holo_dark
        </item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="CommonText.Tussam" parent="android:Widget.TextView">
        <item name="android:textColor">@color/color_palette_2</item>
        <item name="fontName">Roboto-Light</item>
    </style>

    <style name="HelpText.Tussam" parent="android:Widget.TextView">
        <item name="android:textColor">@color/color_palette_1</item>
        <item name="fontName">Roboto-Light</item>
    </style>

    <style name="CardText.Tussam" parent="android:Widget.TextView">
        <item name="android:textColor">@color/card_detail_text_color</item>
    </style>

    <style name="CardActions.Tussam" parent="android:Widget.ImageButton">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>